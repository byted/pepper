<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="pepper-rest-service" version="3.0">
	<display-name>pepper-RESTservice</display-name>
	<servlet>
		<servlet-name>pepper-RESTService</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<!-- ATTENTION: init param packages cannot be used, since jersey 2.x package scanning does not support osgi bundle uri scheme -->
		<!--init-param> 
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>de.hu_berlin.german.korpling.saltnpepper.pepper.service</param-value>
        </init-param-->	
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
		    <param-value>de.hu_berlin.german.korpling.saltnpepper.pepper.service.WebApplication</param-value>
		</init-param>
		<!--init-param>
            <param-name>jersey.config.server.provider.scanning.recursive</param-name>
            <param-value>false</param-value>
        </init-param-->
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>pepper-RESTService</servlet-name>
		<url-pattern>/pepper-rest/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
   		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>